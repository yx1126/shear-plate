{
    "name": "shear-plate",
    "displayName": "shear-plate",
    "description": "shear plate copy",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.7.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "pnpm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "pnpm run compile && pnpm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.0.1",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.75.0",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
        "@vscode/test-electron": "^2.2.2",
        "eslint": "^8.33.0",
        "glob": "^8.1.0",
        "mocha": "^10.1.0",
        "typescript": "^4.9.4"
    },
    "activationEvents": [
        "onView:clipboard",
        "onCommand:shear-plate.add",
        "onCommand:shear-delete.add",
        "onCommand:clipboard.deleteAll",
        "onCommand:clipboard.delete",
        "onCommand:clipboard.copytext"
    ],
    "contributes": {
        "menus": {
            "editor/context": [
                {
                    "command": "shear-plate.add",
                    "group": "navigation",
                    "when": "editorHasSelection"
                },
                {
                    "command": "shear-plate.delete",
                    "group": "navigation",
                    "when": "editorHasSelection"
                }
            ],
            "view/title": [
                {
                    "command": "clipboard.deleteAll",
                    "when": "view == clipboard",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "clipboard.delete",
                    "group": "inline"
                },
                {
                    "command": "clipboard.copytext",
                    "group": "inline"
                }
            ]
        },
        "commands": [
            {
                "command": "shear-plate.add",
                "title": "%view.ctx.add%"
            },
            {
                "command": "shear-plate.delete",
                "title": "%view.ctx.delete%"
            },
            {
                "command": "clipboard.deleteAll",
                "title": "%menu.deleteAll%",
                "icon": {
                    "dark": "resources/dark/delete.svg",
                    "light": "resources/light/delete.svg"
                }
            },
            {
                "command": "clipboard.delete",
                "title": "%menu.delete%",
                "icon": {
                    "dark": "resources/dark/close.svg",
                    "light": "resources/light/close.svg"
                }
            },
            {
                "command": "clipboard.copytext",
                "title": "%menu.copy%",
                "icon": {
                    "dark": "resources/dark/copy.svg",
                    "light": "resources/light/copy.svg"
                }
            }
        ],
        "views": {
            "shear-plate": [
                {
                    "id": "clipboard",
                    "name": "%view.clipboard%"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "shear-plate",
                    "title": "shear-plate",
                    "icon": "resources/logo.svg"
                }
            ]
        }
    }
}
